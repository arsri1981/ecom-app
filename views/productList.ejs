<!DOCTYPE html>
<html>
<head>
    <title>Product List-New</title>
    <link rel="stylesheet" href="../public/style.css"> <!-- Link to stylesheet -->
</head>
<body>
    <h1>Product List</h1>
    <a href="/users/logout">Logout</a>

    <ul>
        <% products.forEach(product => { %>
            <li>
                <a href="/products/<%= product._id %>"><%= product.name %></a> - $<%= product.price %>
                <img src="<%= product.imageUrl %>" alt="<%= product.name %>">

                <form action="/cart/add/<%= product._id %>" method="POST">
                    <label for="quantity">Quantity:</label>
                    <input type="number" id="quantity" name="quantity" value="1" min="1" max="<%= product.inventory %>">
                    <button type="submit">Add to Cart</button>
                </form>
            </li>
        <% }); %>
    </ul>
     <a href="/cart">View Cart</a>
</body>
</html>